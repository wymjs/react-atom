{
  "name": "@wymjs/react-atom",
  "version": "1.0.0",
  "type": "module",
  "description": "極簡 react18+ 原子狀態管理",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md"
  ],
  "scripts": {
    "build-package": "tsup src/index.ts --format esm --dts --clean",
    "publish-package": "pnpm run build-package && npm publish",
    "lint": "eslint --fix --no-ignore --max-warnings=0",
    "format": "prettier --cache --write",
    "prepare": "husky install"
  },
  "homepage": "https://github.com/wymjs/react-atom/",
  "keywords": [
    "wtbx",
    "typescript",
    "react",
    "store manager"
  ],
  "license": "ISC",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "pnpm run lint",
    "*.{js,jsx,ts,tsx,vue,css,sass,scss,less}": "pnpm run format"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@types/node": "^18.19.23",
    "@types/react": "^18.2.64",
    "benny": "^3.7.1",
    "tsup": "^8.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=18"
  }
}
